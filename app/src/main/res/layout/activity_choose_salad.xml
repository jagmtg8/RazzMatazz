<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="github2b2b.razz.ChooseDessert">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose a Salad"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|top"
        android:textSize="50dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton16"
        android:background="@drawable/macaronisalad"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="0"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imageButton17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton17"
        android:background="@drawable/potatosalad"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="1"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imageButton18"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton18"
        android:background="@drawable/coleslaw"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="2"
        android:layout_gravity="center_horizontal"
        android:longClickable="false"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16"
        android:layout_toRightOf="@+id/imageButton17"
        android:layout_toEndOf="@+id/imageButton17" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Macaroni Salad- $4.00"
        android:id="@+id/textView14"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton16"
        android:layout_toLeftOf="@+id/imageButton17"
        android:layout_toStartOf="@+id/imageButton17" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Potato Salad - $4.00"
        android:id="@+id/textView15"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Coleslaw - $3.50"
        android:id="@+id/textView16"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton17"
        android:layout_toRightOf="@+id/imageButton17"
        android:layout_toEndOf="@+id/imageButton17" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/chickensalad"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="0"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton8"
        android:background="@drawable/tunasalad"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="1"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton9"
        android:background="@drawable/eggsalad"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="2"
        android:layout_gravity="center_horizontal"
        android:longClickable="false"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_toRightOf="@+id/imageButton8"
        android:layout_toEndOf="@+id/imageButton8" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Chicken Salad- $4.75"
        android:id="@+id/textView17"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tuna Salad- $4.00"
        android:id="@+id/textView18"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toLeftOf="@+id/textView16"
        android:layout_toStartOf="@+id/textView16" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Egg Salad- $4.00"
        android:id="@+id/textView19"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
