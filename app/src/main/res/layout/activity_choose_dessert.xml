<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="github2b2b.razz.ChooseDessert">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose a Dessert"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|top"
        android:textSize="50dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton16"
        android:background="@drawable/brownie"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="0"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAlignBottom="true"
        android:adjustViewBounds="false" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton17"
        android:background="@drawable/cookie"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="1"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageButton16"
        android:layout_toEndOf="@+id/imageButton16" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:id="@+id/imageButton18"
        android:background="@drawable/pie"
        android:onClick="dessertClick"
        android:clickable="true"
        android:tag="2"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageButton17"
        android:layout_toEndOf="@+id/imageButton17"
        android:longClickable="false" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Brownie- $1.50"
        android:id="@+id/textView14"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton16"
        android:layout_toLeftOf="@+id/imageButton17"
        android:layout_toStartOf="@+id/imageButton17" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cookie - $1.00"
        android:id="@+id/textView15"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apple Pie - $2.50"
        android:id="@+id/textView16"
        android:textStyle="bold"
        android:textColor="#000000"
        android:password="false"
        android:phoneNumber="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton17"
        android:layout_toRightOf="@+id/imageButton17"
        android:layout_toEndOf="@+id/imageButton17" />

</RelativeLayout>
